{
  "name": "test-fixture-factory",
  "version": "2.0.3",
  "description": "A minimal library for creating and managing test fixtures using Vitest, enabling structured, repeatable, and efficient testing processes.",
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "volta": {
    "node": "24.4.1"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "$npm_execpath run build",
    "build": "tsup",
    "test": "vitest --watch=false",
    "tidy": "biome check --fix --unsafe",
    "tidy:check": "biome check",
    "tsc": "tsc --incremental",
    "knip": "knip"
  },
  "keywords": [
    "dependency-management",
    "factory",
    "fixture",
    "javascript",
    "lifecycle-management",
    "mocking",
    "test",
    "test-automation",
    "test-data",
    "test-factory",
    "test-fixtures",
    "testing",
    "typescript",
    "unit-testing",
    "vitest",
    "zero-dependencies"
  ],
  "author": {
    "name": "George Czabania"
  },
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "24.5.2",
    "knip": "5.63.1",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
